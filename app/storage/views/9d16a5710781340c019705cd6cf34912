<?php $__env->startSection('page-script'); ?>
<script type="text/javascript">
    $(function() {
        $(document).on('click', '.change-status', function() {
            var self = $(this);
            var status = parseInt(self.attr('data-status'));
            var data = {'id': self.attr('data-id'),
                'status': status,
                'type': CONFIG.get('CATEGORY_CHANGE_STATUS')};
            var res = executeAjaxRequest(self, data, true);
            $("#message").html(res.str);
            if (res.valid) {
                if (status) {
                    $("#loader").replaceWith('<a href="javascript:void(0);" class="btn-danger btn-sm change-status" data-id="' + self.attr('data-id') + '" data-status="0" title="Active This">Inactive</a>');
                    return false;
                }

                $("#loader").replaceWith('<a href="javascript:void(0);" class="btn btn-success btn-sm change-status" data-id="' + self.attr('data-id') + '" data-status="1" title="Inactive This">Active</a>');
            }

            // if some error occurrs then loader will again changed to element
            $("#loader").replaceWith(self);
        });
    });
</script>
<?php $__env->stopSection(); ?>
